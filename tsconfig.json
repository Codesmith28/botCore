{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
