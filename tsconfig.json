{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@database/*": ["database/*"],
            "@utils/*": ["utils/*"],
            "@types/*": ["@utils/types/*"]
            "@functions/*": ["@utils/functions/*"]
        }
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
